        {
            "name": "VCx86_64",
            "displayName": "Visual Studio Build Tools 2022 Release - arm64_amd64",
            "description": "Using compilers for Visual Studio 17 2022 (arm64_x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=ARM64",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "C:/Qt/6.8.2/msvc2022_64",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "VCx86_64-debug",
            "displayName": "Visual Studio Build Tools 2022 Release - arm64_amd64 - Debug",
            "configurePreset": "VCx86_64",
            "configuration": "Debug"
        }
    ]
}